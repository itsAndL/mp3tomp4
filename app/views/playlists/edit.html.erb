<!-- app/views/playlists/edit.html.erb -->
<h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Playlist</h1>

<%= form_with url: playlist_path(@playlist[:playlist_id]), method: :patch, local: true, class: "bg-white shadow rounded-lg p-6" do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, value: @playlist[:title], required: true, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <div class="mb-6">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, value: @playlist[:description], rows: 4, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :privacy_status, "Privacy Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :privacy_status, 
        options_for_select([
          ['Public - Anyone can find and view', 'public'],
          ['Unlisted - Only people with the link can view', 'unlisted'],
          ['Private - Only you can view', 'private']
        ], @playlist[:privacy_status]), 
        {}, 
        { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" } %>
    <p class="mt-1 text-sm text-gray-500">Choose who can see your playlist</p>
  </div>
  
  <div class="flex justify-between">
    <div class="flex space-x-3">
      <%= link_to "Cancel", playlist_path(@playlist[:playlist_id]), class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
      <%= form.submit "Update Playlist", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  </div>
<% end %>