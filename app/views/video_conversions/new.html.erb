<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Create MP4 Video from MP3</h1>
  
  <%= form_with model: @video_conversion, local: true, class: "space-y-6" do |form| %>
    <% if @video_conversion.errors.any? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2">Please fix the following errors:</h2>
        <ul class="list-disc list-inside">
          <% @video_conversion.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Enter video title" %>
    </div>
    
    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, 
          rows: 4,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Enter video description (optional)" %>
    </div>
    
    <div>
      <%= form.label :mp3_file, "MP3 Audio File", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.file_field :mp3_file, 
          accept: "audio/mp3,audio/mpeg",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= form.label :logo_image, "Logo Image", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.file_field :logo_image, 
          accept: "image/*",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div class="flex gap-4">
      <%= form.submit "Create Video", 
          class: "bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition cursor-pointer" %>
      <%= link_to "Cancel", video_conversions_path, 
          class: "bg-gray-300 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-400 transition" %>
    </div>
  <% end %>
</div>