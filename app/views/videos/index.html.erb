<!-- app/views/videos/index.html.erb -->
<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900">My Videos</h1>
  <%= link_to "Upload Video", new_video_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @videos.each do |video| %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= video[:title] %></h3>
        <p class="text-gray-600 mb-4"><%= truncate(video[:description], length: 100) %></p>
        <div class="flex items-center justify-between">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                       <%= video[:privacy_status] == 'public' ? 'bg-green-100 text-green-800' : 
                           video[:privacy_status] == 'private' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
            <%= video[:privacy_status].capitalize %>
          </span>
          <%= link_to "View", video_path(video[:video_id]), class: "text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
    </div>
  <% end %>
</div>